@model ParisianUrban.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Parisian Urban | RegisterPage</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="Stylesheet" href="~/Content/CSS/Style.css">
</head>
<body style="color: #777">
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="~/Views/Home/Main.cshtml">Parisian Urban</a>
        <h4 style="float:right;margin-right:10px;color:white"> @ViewBag.errorMsg</h4>
    </nav>

    <div class="main-container">
        <div class="main-content">
            <div class="content-position size space">
                <h2 class="main-text black">Find your dream home today!</h2>
                <div class="second-container">
                    <div class="icon-1">
                        <i style="font-size:2em" class="fas fa-search"></i>
                    </div>
                    <div class="side-container1">
                        <span class="side-text1"><b>Search for a residence</b></span>
                    </div>
                </div>

                <div class="second-container">
                    <div class="icon-1">
                        <i style="font-size:2em" class="fas fa-thumbs-up"></i>
                    </div>
                    <div class="side-container1">
                        <span class="side-text1"><b>Speak with a pro</b></span>
                    </div>
                </div>

                <div class="second-container">
                    <div class="icon-1">
                        <i style="font-size:2em" class="fas fa-home"></i>
                    </div>
                    <div class="side-container1">
                        <span class="side-text1"><b>Get your dream home!</b></span>
                    </div>
                </div>
            </div>
            <div class="side-left">
                <h2 class="login-text black mbl">Sign Up!</h2>

                @using (Html.BeginForm())
    {
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            @Html.LabelFor(l => l.Firstname)
            @Html.TextBoxFor(t => t.Firstname, new { @class = "form-control", @placeHolder = "First Name" })
            @Html.ValidationMessageFor(v => v.Firstname, "", new { @class = "text-danger" })<br /><br />

            @Html.LabelFor(l => l.Lastname)
            @Html.TextBoxFor(t => t.Lastname, new { @class = "form-control", @placeHolder = "Last Name" })
            @Html.ValidationMessageFor(v => v.Lastname, "", new { @class = "text-danger" })<br /><br />

            @Html.LabelFor(l => l.Email)
            @Html.TextBoxFor(t => t.Email, new { @class = "form-control", @placeHolder = "Email" })
            @Html.ValidationMessageFor(v => v.Email, "", new { @class = "text-danger" })<br /><br />

            @Html.LabelFor(l => l.Address)
            @Html.TextBoxFor(t => t.Address, new { @class = "form-control", @placeHolder = "Address" })
            @Html.ValidationMessageFor(v => v.Address, "", new { @class = "text-danger" })<br /><br />

            @Html.LabelFor(l => l.PasswordHash)
            @Html.PasswordFor(l => l.PasswordHash, new { @class = "form-control", @placeHolder = "Password" })
            @Html.ValidationMessageFor(v => v.PasswordHash, "", new { @class = "text-danger" })<br /><br />

            <button class="btn btn-primary" type="submit">Register</button>
}
            </div>
        </div>
    </div>
</body>
</html>
