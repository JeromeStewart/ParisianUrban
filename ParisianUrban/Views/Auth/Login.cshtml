@model ParisianUrban.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Parisian Urban | Login</title>
    <script defer src="https://use.fontawesome.com/releases/v5.0.8/js/all.js" integrity="sha384-SlE991lGASHoBfWbelyBPLsUlwY1GwNDJo3jSJO04KZ33K2bwfV9YBauFfnzvynJ" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link href="~/Content/CSS/Style.css" rel="stylesheet" />
</head>
<body style="color: #777">
    <nav class="navbar navbar-dark bg-dark">
        <a class="navbar-brand" href="~/Views/Home/Main.cshtml">Parisian Urban</a>
        <h4 style="float:right;margin-right:10px;color:white"> @ViewBag.errorMsg</h4>
    </nav>
  
    <div class="main-container">
        <div class="main-content">
            <div class="content-position size space">
                <h2 class="main-text black">Find your dream home today!</h2>
                <div class="second-container">
                    <div class="icon-1">
                        <i style="font-size:2em" class="fas fa-search"></i>
                    </div>
                    <div class="side-container1">
                        <span class="side-text1"><b>Search for a residence</b></span>
                    </div>
                </div>

                <div class="second-container">
                    <div class="icon-1">
                        <i style="font-size:2em" class="fas fa-thumbs-up"></i>
                    </div>
                    <div class="side-container1">
                        <span class="side-text1"><b>Speak with a pro</b></span>
                    </div>
                </div>

                <div class="second-container">
                    <div class="icon-1">
                        <i style="font-size:2em" class="fas fa-home"></i>
                    </div>
                    <div class="side-container1">
                        <span class="side-text1"><b>Get your dream home!</b></span>
                    </div>
                </div>
            </div>
            <div class="side-left">
                <h2 class="login-text black mbl">Login!</h2>
                @using (Html.BeginForm())
    {
            <div class="form-group">
                @Html.LabelFor(l => l.Email)
                @Html.TextBoxFor(t => t.Email, new { @class = "form-control", placeholder = "Email" })
            </div>
            <div class="form-group">
                @Html.LabelFor(l => l.PasswordHash)
                @Html.PasswordFor(p => p.PasswordHash, new { @class = "form-control", placeholder = "Password" })
            </div><br />
            <input type="submit" value="Login" class="btn btn-primary" style="margin-left: auto; margin-right: auto" />
}
                @*<form method="post">
                    <div class="form-group">
                        <label for="email">Email address</label>
                        <input type="email" class="form-control" id="email" placeholder="Enter Email" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Enter Password" />
                    </div><br /><br />
                    <input type="submit" value="Login" class="btn btn-primary" style="margin-left: auto; margin-right: auto" />
                </form>*@
            </div>
        </div>
    </div>
</body>
</html>
