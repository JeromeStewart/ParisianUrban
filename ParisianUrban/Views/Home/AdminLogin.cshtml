@model ParisianUrban.Models.Admin
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Login </title>
   
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/CSS/Style.css" />
</head>
<body>
    <header class="admin-header">
        <div class="center-text">
            <h1>Administrators</h1>
            <h3>@ViewBag.greeting</h3>
        </div>
    </header><br /><br />

    @Html.ValidationSummary(false ,  "", new { @class = "text-danger" })

    @using (Html.BeginForm("AdminDisplay", "Home", FormMethod.Post))
    {
        <div class="text-center">
            @Html.LabelFor(l => l.ID)
            <div class="input-length">
                @Html.TextBoxFor(t => t.ID, new { @class = "form-control", @placeHolder = "ID" }) <br /><br />
            </div>
        </div>

        <div class="text-center">
            @Html.LabelFor(l => l.Password)
            <div class="input-length">
                @Html.PasswordFor(t => t.Password, new { @class = "form-control", @placeHolder = "password" })
            </div>
        </div>
        <br /><br />

        <div class="text-center">
            <button type="submit" class="btn btn-primary">Login</button>
        </div>

    }
    <br />

</body>
    </html>
